{% if field.value == 1 %}
    <span class="badge badge-secondary">En attente de paiement</span>
{% elseif field.value == 2 %}
    <span class="badge badge-info">Payée</span>
{% elseif field.value == 3 %}
    <span class="badge badge-warning">En cours de préparation</span>
{% elseif field.value == 4 %}
    <span class="badge badge-success">Expédié</span>
{% elseif field.value == 5 %}
    <span class="badge badge-danger">Annulée</span>
{% elseif field.value == 6 %}
{% endif %}




